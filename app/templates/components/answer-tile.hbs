{{#if hasAnswer}}
  <hr>
  <h3>Offer An Answer</h3>
  <form>
    <div class="form-group">
      <label for="answer">What's your answer?</label>
      {{textarea class="form-control" value=answer required="true"}}
    </div>
    <div class="form-group">
      <label for="author">What's your name?</label>
      {{input class="form-control" value=author required="true"}}
    </div>
    <button class="btn btn-primary" {{action 'saveAnswer'}}>Answer</button>
    <button class="btn btn-danger" {{action 'noAnswer'}}>Cancel</button>
  </form>
{{else}}
  <button class="btn btn-primary" {{action 'answerQuestion'}}>Answer Question</button>
{{/if}}
